{% extends 'base.html.twig' %}

{% block title %}Hashtags tracked{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="table-responsive">
            {% if hashtags is not empty %}
            <table id="hashtagsTable" class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th colspan="3">Hashtag</th>
                    </tr>
                </thead>
                <tbody>
                {% if hashtags|length > 0 %}
                {% for hashtag in hashtags %}
                    <tr>
                        <td>{{  hashtag.getName() }}</td>
                        <td class="text-right">
                            <a href="/export/{{ hashtag.getId().toString() }}/json" class="btn btn-secondary btn-sm">JSON</a>
                            <a href="/export/{{ hashtag.getId().toString() }}/csv" class="btn btn-secondary btn-sm">CSV</a>
                            <a href="/export/{{ hashtag.getId().toString() }}/excel" class="btn btn-secondary btn-sm">Excel</a>
                        </td>
                        <td class="text-right"><a href="/hashtag/{{ hashtag.getId().toString() }}" class="btn btn-secondary btn-sm">Random Tweet</a></td>
                    </tr>
                {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center">Todav√≠a no hay hashtags trackeados</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
{% endblock %}

